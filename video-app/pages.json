{
    "easycom": {
        "autoscan": true,
        "custom": {
            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
        }
    },
    "pages": [
        {
            "path": "pages/index/index",
            "style": {
                "navigationBarTitleText": "视频首页",
                "navigationBarBackgroundColor": "#1a1a2e",
                "navigationBarTextStyle": "white",
                "backgroundColor": "#0a0a1a",
                "backgroundTextStyle": "light",
                "enablePullDownRefresh": true,
                "onReachBottomDistance": 100,
                "app-plus": {
                    "titleNView": {
                        "type": "default",
                        "backgroundColor": "#1a1a2e",
                        "titleColor": "#ffffff",
                        "titleText": "视频首页"
                    },
                    "bounce": "vertical"
                }
            }
        },
        {
            "path": "pages/player/player",
            "style": {
                "navigationBarTitleText": "视频播放",
                "navigationBarBackgroundColor": "#1a1a2e",
                "navigationBarTextStyle": "white",
                "backgroundColor": "#0a0a1a",
                "navigationStyle": "custom",
                "app-plus": {
                    "titleNView": false,
                    "bounce": "none",
                    "softinputMode": "adjustResize"
                }
            }
        },
        {
            "path": "pages/category/category",
            "style": {
                "navigationBarTitleText": "分类视频",
                "navigationBarBackgroundColor": "#1a1a2e",
                "navigationBarTextStyle": "white",
                "backgroundColor": "#0a0a1a",
                "enablePullDownRefresh": true,
                "onReachBottomDistance": 100,
                "app-plus": {
                    "titleNView": {
                        "type": "default",
                        "backgroundColor": "#1a1a2e",
                        "titleColor": "#ffffff"
                    },
                    "bounce": "vertical"
                }
            }
        },
        {
            "path": "pages/search/search",
            "style": {
                "navigationBarTitleText": "搜索结果",
                "navigationBarBackgroundColor": "#1a1a2e",
                "navigationBarTextStyle": "white",
                "backgroundColor": "#0a0a1a",
                "onReachBottomDistance": 100,
                "app-plus": {
                    "titleNView": {
                        "type": "default",
                        "backgroundColor": "#1a1a2e",
                        "titleColor": "#ffffff",
                        "titleText": "搜索"
                    },
                    "softinputMode": "adjustResize"
                }
            }
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "white",
        "navigationBarTitleText": "视频播放器",
        "navigationBarBackgroundColor": "#1a1a2e",
        "backgroundColor": "#0a0a1a",
        "backgroundTextStyle": "light",
        "pageOrientation": "portrait",
        "rpxCalcMaxDeviceWidth": 750,
        "rpxCalcBaseDeviceWidth": 375,
        "app-plus": {
            "titleNView": {
                "buttons": [],
                "titleColor": "#ffffff",
                "backgroundColor": "#1a1a2e"
            },
            "bounce": "none",
            "scrollIndicator": "none"
        },
        "h5": {
            "navigationStyle": "default"
        },
        "mp-weixin": {
            "navigationStyle": "default"
        }
    },
    "tabBar": {
        "color": "#8b8b8b",
        "selectedColor": "#00d4ff",
        "borderStyle": "black",
        "backgroundColor": "#1a1a2e",
        "height": "50px",
        "fontSize": "12px",
        "iconWidth": "24px",
        "spacing": "3px",
        "list": [
            {
                "pagePath": "pages/index/index",
                "text": "首页",
                "iconPath": "static/tabbar/home.png",
                "selectedIconPath": "static/tabbar/home-active.png"
            }
        ]
    },
    "condition": {
        "current": 0,
        "list": [
            {
                "name": "首页",
                "path": "pages/index/index",
                "query": ""
            },
            {
                "name": "播放页",
                "path": "pages/player/player",
                "query": "id=1"
            }
        ]
    }
}
